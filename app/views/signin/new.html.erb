<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<%= form_with url: new_signin_path do |form| %>
  <%= form.text_field :name, required: true, autofocus: true, autocomplete: "off", placeholder: "Enter your name", value: params[:name] %><br>
  <%= form.password_field :password, required: true, autocomplete: "off", placeholder: "Enter your password", maxlength: 72 %><br>
  <%= form.submit "Sign in" %>
<% end %>
<br>
