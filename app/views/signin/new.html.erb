<div class="signin-page">
  <%= display_flash_messages %>

  <div class="signin-form-container">
    <h1>Sign in</h1>
    
    <%= form_with url: signin_index_path, class: "signin-form" do |form| %>
      <%= display_signin_errors(@user) %>

      <div class="form-group">
        <%= label_tag :name, "ユーザー名", class: "form-label" %>
        <%= signin_form_field(form, :text, :name, 
                             autofocus: true, 
                             autocomplete: "username", 
                             placeholder: "ユーザー名を入力してください", 
                             value: params[:name]) %>
      </div>

      <div class="form-group">
        <%= label_tag :password, "パスワード", class: "form-label" %>
        <%= signin_form_field(form, :password, :password, 
                             autocomplete: "current-password", 
                             placeholder: "パスワードを入力してください", 
                             maxlength: 72) %>
      </div>

      <div class="form-actions">
        <%= form.submit "サインイン", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

