<div class="room-container" data-good-ans-id="<%= @room.id %>">
  <div class="game-container">
    <h1>ゲーム開始</h1>

    <div class="room-info">
      <h2>ルーム情報</h2>
      <p><strong>ルーム名:</strong> <%= @room.room_name %></p>
      <p><strong>ホスト:</strong> <%= @room.host.name %></p>
      <p><strong>ルームID:</strong> <%= @room.id %></p>
      <p><strong>作成日時:</strong> <%= @room.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
    </div>

    <%= display_users(@user_names) %>

    <div class="current-user-info">
      <h3>あなたの情報</h3>
      <p><strong>ユーザー名:</strong> <%= current_user.name %></p>
      <p><strong>参加状況:</strong>
        <% if current_user.id == @room.host_id %>
          <span class="host-badge">ホスト</span>
        <% else %>
          <span class="participant-badge">参加者</span>
        <% end %>
      </p>
    </div>

    <% if current_user.id == @room.host_id %>
      <div class="game-actions">
        <button class="btn btn-primary">ゲーム開始</button>
        <%= link_to "ルームに戻る", lobby_path(@room, back_room: true), data: { turbo: false } %>
      </div>

      <div data-controller="toggle">
        <button data-action="click->toggle#toggle">お題を表示</button>
      </div>
    <% end %>

    <div data-toggle-target="content" id="theme"><%= @current_theme %></div>

    <div class="message-form-container">
      <%= form_with(url: post_game_path, method: :post, local: false, data: { turbo: true }) do |form| %>
        <div class="form-group">
          <%= form.label :content, "メッセージ:" %>
          <%= form.text_area :content, rows: 5, class: "form-control" %>
        </div>
        <div class="form-actions">
          <%= form.submit "メッセージを送信", class: "btn btn-success" %>
        </div>
      <% end %>

      <h4>回答一覧</h4>
      <div class="answers-list">
        <%= turbo_stream_from "answers" %>
         <%= render partial: "answers", locals: { answers: @answers } %>
      </div>
    </div>
  </div>
</div>