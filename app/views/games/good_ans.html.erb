<div class="room-container" data-good-ans-id="<%= @room.id %>">
  <div class="game-container">
    <h1>ゲーム開始</h1>
    
    <div class="room-info">
      <h2>ルーム情報</h2>
      <p><strong>ルーム名:</strong> <%= @room.room_name %></p>
      <p><strong>ホスト:</strong> <%= @room.host.name %></p>
      <p><strong>ルームID:</strong> <%= @room.id %></p>
      <p><strong>作成日時:</strong> <%= @room.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
    </div>
    
    <!-- ヘルパーを使用してユーザー一覧を表示 -->
    <%= display_users(@user_names) %>
    
    <div class="current-user-info">
      <h3>あなたの情報</h3>
      <p><strong>ユーザー名:</strong> <%= current_user.name %></p>
      <p><strong>参加状況:</strong> 
        <% if current_user.id == @room.host_id %>
          <span class="host-badge">ホスト</span>
        <% else %>
          <span class="participant-badge">参加者</span>
        <% end %>
      </p>
    </div>
    <% if current_user.id == @room.host_id %>
      <div class="game-actions">
        <button class="btn btn-primary">ゲーム開始</button>
        <%= link_to "ルームに戻る", lobby_path(@room, back_room: true), class: "btn btn-secondary" %>
      </div>
    <% end %>

    <div data-controller="toggle">
      <button data-action="click->toggle#toggle">お題を表示</button>
      <div data-toggle-target="content" id="theme">
      </div>
  </div>
</div>
  </div>
</div>

<style>

  .game-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    font-family: Arial, sans-serif;
  }
  
  .room-info, .current-user-info, .users-info {
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 8px;
    padding: 20px;
    margin: 20px 0;
  }
  
  .room-info h2, .current-user-info h3, .users-info h3 {
    margin-top: 0;
    color: #495057;
  }
  
  .users-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  
  .user-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    background-color: white;
    border-radius: 5px;
    border: 1px solid #e9ecef;
  }
  
  .user-name {
    font-weight: bold;
    color: #495057;
  }
  
  .host-badge {
    background-color: #28a745;
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.9em;
  }
  
  .participant-badge {
    background-color: #007bff;
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.9em;
  }
  
  .game-actions {
    text-align: center;
    margin-top: 30px;
  }
  
  .btn {
    display: inline-block;
    padding: 10px 20px;
    margin: 0 10px;
    text-decoration: none;
    border-radius: 5px;
    border: none;
    cursor: pointer;
    font-size: 16px;
  }
  
  .btn-primary {
    background-color: #007bff;
    color: white;
  }
  
  .btn-secondary {
    background-color: #6c757d;
    color: white;
  }
  
  .btn-outline {
    background-color: transparent;
    color: #007bff;
    border: 2px solid #007bff;
  }
  
  .btn:hover {
    opacity: 0.8;
  }
</style>