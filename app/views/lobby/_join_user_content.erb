<div class="room-details-users" id="join_user_content">
  <p>参加者: 
    <% if join_user.present? %>
      <% join_user.each do |user| %>
        <span class="participant"><%= user %></span>
      <% end %>
    <% else %>
      <span class="no-participants">参加者はいません</span>
    <% end %>
  </p>
  </div>

  <style>
    .room-details-users {
    font-size: 4rem !important;
    margin: 6px 0;
    color: #555;
    letter-spacing: 0.5px;
    display: flex;
    justify-content: space-between;
    width: 100%;
  }
  </style>