<div class="auth-page">
  <!-- Top Banner -->
  <div class="top-banner">
    <h1>With Board</h1>
    <div class="hamburger-menu" onclick="toggleUserPopup()">
      <div class="hamburger-line"></div>
      <div class="hamburger-line"></div>
      <div class="hamburger-line"></div>
    </div>
    <div class="user-popup" id="userPopup">
      <div class="user-info">
        <%= user_status %>
      </div>
      <%= link_to "ログアウト", logout_path, 
                method: :delete, 
                class: "popup-logout",
                data: { 
                  turbo_method: :delete,
                  confirm: "ログアウトしますか？" 
                } %>
    </div>
  </div>

  <div class="container">
    <div class="room-container" data-room-id="<%= @room.id %>">
     
      <h1>ゲーム一覧</h1>

      <div class="room-details">
        <h2><%= @room.room_name %></h2>
        <p>ホスト: <%= @room.host.name %></p>
        <p>作成日時: <%= @room.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
        <%= render partial: "join_user_content", locals: { join_user: @join_user } %>
      </div>

      <!-- Room Image Section (Partial) -->
      <%= turbo_stream_from "join_user_channel" %>
      <%= render partial: "room_image_section", locals: { room: @room } %>

      <div class="room-actions">
        <% if current_user && current_user.id == @room.host_id %>
          <%= button_to "ルームを削除", 
                        lobby_path(@room), 
                        method: :delete, 
                        confirm: "本当にこのルームを削除しますか？", 
                        class: "btn btn-danger",
                        data: { turbo: false } %> 
        <% end %>
        <% if current_user.user_status == false %>
        <%= link_to "ルームから抜ける", 
                    logout_room_path(@room.id), 
                    method: :delete, 
                    class: "btn btn-danger",
                    data: { 
                      turbo_method: :delete,
                      confirm: "本当にルームから抜けますか？" 
                    } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .room-image-section {
    text-align: center;
    margin: 20px 0;
  }
  
  .game-link {
    display: inline-block;
    text-decoration: none;
    transition: transform 0.2s;
  }
  
  .game-link:hover {
    transform: scale(1.05);
  }
  
  .game-disabled {
    display: inline-block;
    cursor: not-allowed;
  }
  
  .game-start-image {
    max-width: 300px;
    height: auto;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  
  .game-start-image.disabled {
    opacity: 0.5;
    filter: grayscale(100%);
  }
  
  .game-start-text {
    margin-top: 10px;
    font-weight: bold;
    color: #007bff;
  }
  
  .game-start-text.disabled {
    color: #6c757d;
  }
</style>

