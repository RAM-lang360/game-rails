<div class="room-create-page">
  <h1>ルーム作成</h1>
  
  <div class="user-info">
    <h3><%= current_user_status_display %></h3>
  </div>

  <div class="room-form-container">
    <%= form_with(model: @room, url: lobby_index_path, local: true, class: "room-form") do |f| %>
      <%= display_errors(@room) %>

      <div class="form-group">
        <%= f.label :room_name, 'ルーム名', class: 'form-label' %>
        <%= f.text_field :room_name, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード', class: 'form-label' %>
        <%= f.password_field :password, class: 'form-control', required: true %>
      </div>

      <div class="form-actions">
        <%= f.submit '作成', class: 'btn btn-success' %>
        <%= link_to 'キャンセル', lobby_index_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>


