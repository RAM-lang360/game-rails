<div class="room-container" data-room-id="<%= @room.id %>">
  <h1>ルーム詳細</h1>

  <div class="room-details">
    <h2><%= @room.room_name %></h2>
    <p>ホスト: <%= @room.host.name %></p>
    <p>作成日時: <%= @room.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
  </div>

  <!-- クリック可能な画像エリア -->
  <div class="room-image-section">
    <% if current_user && current_user.id == @room.host_id %>
      <%= link_to good_ans_game_path(@room, start_game: true), 
                  class: "game-link", 
                  data: { 
                    turbo: false,
                    confirm: "ゲームを開始しますか？ルーム内の全員がゲーム画面に移動します。" 
                  } do %>
        <%= image_tag "test.png", alt: "ゲーム開始", class: "game-start-image" %>
        <p class="game-start-text">クリックしてゲーム開始</p>
      <% end %>
    <% else %>
      <div class="game-disabled">
        <%= image_tag "test.png", alt: "ゲーム開始", class: "game-start-image disabled" %>
        <p class="game-start-text disabled">ホストのみゲーム開始可能</p>
      </div>
    <% end %>
  </div>

  <div class="room-actions">
    <% if current_user && current_user.id == @room.host_id %>
      <%= button_to "ルームを削除", 
                    lobby_path(@room), 
                    method: :delete, 
                    confirm: "本当にこのルームを削除しますか？", 
                    class: "btn btn-danger",
                    data: { turbo: false } %> 
                    <%# これでこのユーザー以外にリダイレクト行くようにする %>
    <% end %>
    
    <%= link_to "ルーム一覧に戻る", lobby_index_path, class: "btn btn-secondary" %>
  </div>
</div>

<style>
  .room-image-section {
    text-align: center;
    margin: 20px 0;
  }
  
  .game-link {
    display: inline-block;
    text-decoration: none;
    transition: transform 0.2s;
  }
  
  .game-link:hover {
    transform: scale(1.05);
  }
  
  .game-disabled {
    display: inline-block;
    cursor: not-allowed;
  }
  
  .game-start-image {
    max-width: 300px;
    height: auto;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  
  .game-start-image.disabled {
    opacity: 0.5;
    filter: grayscale(100%);
  }
  
  .game-start-text {
    margin-top: 10px;
    font-weight: bold;
    color: #007bff;
  }
  
  .game-start-text.disabled {
    color: #6c757d;
  }
</style>

