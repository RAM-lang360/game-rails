<div class="auth-page">
  <!-- Top Banner -->
  <div class="top-banner">
    <h1>With Board</h1>
    <div class="hamburger-menu" onclick="toggleUserPopup()">
      <div class="hamburger-line"></div>
      <div class="hamburger-line"></div>
      <div class="hamburger-line"></div>
    </div>
    <div class="user-popup" id="userPopup">
      <div class="user-info">
        <%= user_status %>
      </div>
      <%= link_to "ログアウト", logout_path, 
                method: :delete, 
                class: "popup-logout",
                data: { 
                  turbo_method: :delete,
                  confirm: "ログアウトしますか？" 
                } %>
    </div>
  </div>

  <div class="container">
    <div class="room-container" data-room-id="<%= @room.id %>">
      <div class="room-info-row">
        <div class="room-header">
          <h1>ゲーム一覧</h1>
        </div>
        <div class="room-details">
          <div class="room-details-title">ルーム情報</div>
          <div class="room-details-imp">ルーム名: <%= @room.room_name %></div>
          <div class="room-details-imp">パスワード: <%= @room.password %></div>
          <div class="room-details-info">ホスト: <%= @room.host.name %></div>
          <div class="room-details-info">作成日時: <%= @room.created_at.strftime("%Y年%m月%d日 %H:%M") %></div>
          <%= render partial: "join_user_content", locals: { join_user: @join_user } %>
        </div>
      </div>

      <!-- Room Image Section (Partial) -->
      <%= turbo_stream_from "join_user_channel" %>
      <%= render partial: "room_image_section", locals: { room: @room } %>

      <div class="room-actions">
        <% if current_user && current_user.id == @room.host_id %>
          <%= button_to "ルームを削除", 
                        lobby_path(@room), 
                        method: :delete, 
                        confirm: "本当にこのルームを削除しますか？", 
                        class: "btn btn-danger",
                        data: { turbo: false } %> 
        <% end %>
        <% if current_user.user_status == false %>
        <%= link_to "ルームから抜ける", 
                    logout_room_path(@room.id), 
                    method: :delete, 
                    class: "btn btn-danger",
                    data: { 
                      turbo_method: :delete,
                      confirm: "本当にルームから抜けますか？" 
                    } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .room-image-section {
    text-align: center;
    margin: 20px 0;
  }
  
  .game-link {
    display: inline-block;
    text-decoration: none;
    transition: transform 0.2s;
  }
  
  .game-link:hover {
    transform: scale(1.05);
  }
  
  .game-disabled {
    display: inline-block;
    cursor: not-allowed;
  }
  
  .game-start-image {
    max-width: 300px;
    height: auto;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  
  .game-start-image.disabled {
    opacity: 0.5;
    filter: grayscale(100%);
  }
  
  .game-start-text {
    margin-top: 10px;
    font-weight: bold;
    color: #007bff;
  }
  
  .game-start-text.disabled {
    color: #6c757d;
  }
  
  .room-info-row {
    display: flex;
    flex-direction: row;
    align-items: center; /* 両要素の中央揃え */
    gap: 40px;
    justify-content: center;
    margin: 40px 0;
  }

  .room-header {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 260px;
    height: auto;
    background: #fff;
    border: 3px solid #222;
    border-radius: 20px;
    font-size: 2rem;
    font-weight: 500;
    box-sizing: border-box;
    padding: 32px 0;
    margin-left: 80px; /* ← 追加：左側に余白を作る */
  }

  .room-details-title {
  font-size: 1.4rem;
  font-weight: bold;
  margin-bottom: 12px;
  color: #222;
  letter-spacing: 1px;
  text-align: center;
}

  .room-details-info {
    font-size: 1rem;
    margin: 6px 0;
    color: #555;
    letter-spacing: 0.5px;
    display: flex;
    justify-content: space-between;
    width: 100%;
  }
  .room-details-imp {
    font-size: 1.2rem;
    margin: 6px 0;
    color: #333;
    font-weight: bold;
    letter-spacing: 0.5px;
    display: flex;
    justify-content: space-between;
    width: 100%;
  }

  .room-details {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 320px; /* 少し広げる */
    max-width: 100%;
    background: #f8f9fa;
    border: 6px solid #d3d3d3;
    border-radius: 20px;
    padding: 24px 16px; /* 横余白も増やす */
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    font-size: 15px;
    box-sizing: border-box;
    text-align: left;
    height: auto;
    overflow: hidden;
  }
</style>

