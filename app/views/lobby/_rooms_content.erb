<section class="rooms-section" id="lobby-rooms">
  <h2>ルーム一覧</h2>
  <div class="rooms-list" id="rooms-list">
    <%# ルームが存在しない場合のメッセージ %>
  <% if rooms.empty? %>
    <p class="no-rooms">現在、ルームはありません。</p>
  <% else %>
    <div class="rooms">
      <% rooms.each do |room| %>
        <div class="room-item" onclick="joinRoom('<%= room.room_name %>')">
          <%= room_card(room) %>
        </div>
      <% end %>
    </div>
  <% end %>
  </div>
</section>